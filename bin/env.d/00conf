#!/bin/sh

# Disable annoying warning that we are connecting to some service (like HttP-FS),
# without verifying its certificates.
export PYTHONWARNINGS="ignore:Unverified HTTPS request"

# Fix cryptography-2.9 issues with OpenSSL 1.0.1 on Ubuntu 14.04:
if [ -e /etc/debian_version ]; then
    export CRYPTOGRAPHY_ALLOW_OPENSSL_101=true
fi
